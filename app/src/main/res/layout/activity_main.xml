<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="90"
        android:scaleX="2.1"
        android:scaleY="1.8"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/hsv_calculation"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@drawable/screen"
        android:fillViewport="true"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toTopOf="@+id/hsv_inputOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gif_background"
        app:layout_constraintVertical_bias="0.9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_calculationLine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:lines="1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txt_inputOutputLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.9" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/hsv_inputOutput"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/screen"
        android:fillViewport="true"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_inputOutputLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:lines="1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </LinearLayout>
    </HorizontalScrollView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_bracket1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onBracketsButtonClick"
                android:padding="0dp"
                android:text="("
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_bracket2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onBracketsButtonClick"
                android:padding="0dp"
                android:text=")"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_operation6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="OnNegationOrSquareRootButtonClick"
                android:padding="0dp"
                android:text="√"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_unknown1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="OnNegationOrSquareRootButtonClick"
                android:padding="0dp"
                android:text="±"
                android:textSize="24sp"
                app:cornerRadius="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_delete1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onClearAllButtonClick"
                android:padding="0dp"
                android:text="AC"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_delete2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onClearButtonClick"
                android:padding="0dp"
                android:text="←"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_operation5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onOperationButtonClick"
                android:padding="0dp"
                android:text="^"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_operation4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onOperationButtonClick"
                android:padding="0dp"
                android:text="÷"
                android:textSize="24sp"
                app:cornerRadius="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_number7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="7"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_number8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="8"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_number9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="9"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_operation3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onOperationButtonClick"
                android:padding="0dp"
                android:text="×"
                android:textSize="24sp"
                app:cornerRadius="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_number4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="4"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_number5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="5"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_number6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="6"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_operation2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onOperationButtonClick"
                android:padding="0dp"
                android:text="-"
                android:textSize="24sp"
                app:cornerRadius="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_number1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="1"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_number2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="2"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_number3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="3"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_operation1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onOperationButtonClick"
                android:padding="0dp"
                android:text="+"
                android:textSize="24sp"
                app:cornerRadius="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_number0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onNumberButtonClick"
                android:padding="0dp"
                android:text="0"
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_comma"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_background"
                android:enabled="true"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onCommaButtonClick"
                android:padding="0dp"
                android:text=","
                android:textSize="24sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:layout_span="2"
                android:background="@drawable/button_background"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:onClick="onEqualsButtonClick"
                android:padding="0dp"
                android:text="="
                android:textSize="24sp"
                app:cornerRadius="20dp" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>